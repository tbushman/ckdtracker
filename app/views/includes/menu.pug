navbar.navbar-default.navbar-fixed-top
	div.navbar-header
		button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse-1", aria-expanded="false")
			span.sr-only Toggle navigation
			span.icon-bar
			span.icon-bar
			span.icon-bar
		if (result)
			a.navbar-brand(href="#") #{result[0].patient}
				h6.subtitle #{appTitle}
		else
			a.navbar-brand(href="#") #{appTitle}
	if (result)
		div.collapse.navbar-collapse.row#navbar-collapse-1
			
			div.col-xs-10
				div.row#control
					div.col-xs-6.col-sm-3.from
						h6 Date from:
						div.form-group
							div.input-group.date#start_date
								input.form-control(type="text", name="start_date", data-provide="datepicker")
								span.input-group-addon
									span.i.fa.fa-calendar(aria-hidden="true")
									
					div.col-xs-6.col-sm-3.to
						h6 Date to:
						div.form-group
							div.input-group.date#end_date
								input.form-control(type="text", name="end_date", data-provide="datepicker")
								span.input-group-addon
									span.i.fa.fa-calendar(aria-hidden="true")


					div.col-xs-12.col-sm-3
						h6 Values:
						div.dropdown
							button.btn.btn-default.dropdown-toggle(type="button", id="dropdownMenu1", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true") Reveal Measurements 
								span.caret
							div.dropdown-menu.panel.panel-default
								div.panel-body
									ul.list-group(aria-labelledby="dropdownMenu1", style="max-height: 300px; overflow: hidden; overflow-y: scroll;")
										
										each cat, i in data
											if (cat.vis)
												li.list-group-item
													div.input-group
														input.revealvalue(type="checkbox", aria-label= cat.key, id="reveal_"+cat.key+"", checked="true")
														span &nbsp
														label(for="reveal_"+cat.key) #{cat.key}
											else
												li.list-group-item
													div.input-group
														input.revealvalue(type="checkbox", aria-label= cat.key, id="reveal_"+cat.key+"")
														span &nbsp
														label(for="reveal_"+cat.key) #{cat.key}
											
					div.col-xs-12.col-sm-3
						h6.col-xs-12 Add Data:
						
						div.col-xs-12.col-sm-6
						
								
							div.form-group
								div.input-group
									a.btn.btn-default#hideedit(role="button", onclick="document.getElementById('modal_edit').style.display = 'block'; document.getElementById('control').style.display = 'none';")
										span Edit Data
						
						div.col-xs-12.col-sm-6
						
								
							div.form-group
								div.input-group
									a.btn.btn-default#hidenew(role="button", onclick="document.getElementById('modal_new').style.display = 'block'; document.getElementById('control').style.display = 'none';")
										span Add Data

				div.col-xs-10
					form.row.navbar-form.navbar-left#modal_new(style="display: none; max-height: 300px; overflow-y: scroll;", action="/api/add/"+result[0].patient+"/"+(index + 1)+"", method="POST", role="form", enctype="multipart/form-data")
						div.row
						
							div.col-xs-12
								div.row
									div.col-xs-12.col-sm-4.new
										h6 Enter Date:
										div.form-group
											div.input-group.date#new_date
												input.form-control(type="text", name="date", data-provide="datepicker")
												span.input-group-addon
													span.i.fa.fa-calendar(aria-hidden="true")
										p &nbsp
									
							
									div.col-xs-6.col-sm-4
										each mea, j in data
										
											if (j % 2 === 0)
											
												div.row
													div.col-xs-6
														label(for= mea.key) #{mea.key.toUpperCase()}
													div.col-xs-6.form-group
														div.input-group
															input.btn-block.form-control(type="number", step="0.1", name= mea.key)
									div.col-xs-6.col-sm-4
										each mea, j in data
											if (j % 2 !== 0)
												
													
												div.row
													div.col-xs-6
														label(for= mea.key) #{mea.key.toUpperCase()}
													div.col-xs-6.form-group
														div.input-group
															input.btn-block.form-control(type="number", step="0.1", name= mea.key)
								div.row
									div.col-xs-12
										div.row
											div.col-xs-12.col-sm-4
												p &nbsp
												a.btn.btn-default.btn-block(role="button", title="Cancel", href="/")
													span Cancel
											div.col-xs-12.col-sm-8
												p &nbsp
												a.btn.btn-success.btn-block.submit#submitnew(role="button", title="Submit new")
													span Submit data


					form.row.navbar-form.navbar-left#modal_edit(style="display: none; height: 100px; overflow-y: scroll;", action="/api/add/"+result[0].patient+"/"+(index + 1)+"", method="POST", role="form", enctype="multipart/form-data")
						
						div.col-xs-12
							div.row
								div.col-xs-6.col-sm4.new
									h6 Enter Date:
									div.form-group
										div.input-group.date#new_date
											input.form-control(type="text", name="date", data-provide="datepicker", value=result[0].data[0].date, placeholder=""+new Date(result[0].data[0].date).getFullYear()+"-"+new Date(result[0].data[0].date).getMonth()+"-"+new Date(result[0].data[0].date).getDate()+"")
											span.input-group-addon
												span.i.fa.fa-calendar(aria-hidden="true")
									p &nbsp

													
								div.col-xs-6.col-sm-4
									each mea, j in data
									
										if (keys.indexOf(mea.key) !== -1)
										
											div.row
												div.col-xs-6
													label(for= mea.key) #{mea.key.toUpperCase()}
												div.col-xs-6.form-group
													div.input-group
														input.btn-block.form-control(type="number", step="0.1", name= mea.key, value= mea.data[index].val)
								div.col-xs-6.col-sm-4
									each mea, j in data
										if (keys.indexOf(mea.key) === -1)
											
												
											div.row
												div.col-xs-6
													label(for= mea.key) #{mea.key.toUpperCase()}
												div.col-xs-6.form-group
													div.input-group
														input.btn-block.form-control(type="number", step="0.1", name= mea.key, value= mea.data[index].val)
							div.row
								div.col-xs-12
									div.row
										div.col-xs-12.col-sm-4
											p &nbsp
											a.btn.btn-default.btn-block(role="button", title="Cancel", href="/")
												span Cancel
										div.col-xs-12.col-sm-8
											p &nbsp
											a.btn.btn-success.btn-block.submit#submitedit(role="button", title="Submit edits")
												span Submit data
				

script(type="text/javascript").
	
